<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="Background" parent="AppTheme.Base">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/violet</item>
        <item name="actionMenuTextColor">@color/violet</item>
        <item name="android:colorBackground">@color/dark_slate_blue</item>
        <item name="android:statusBarColor">@color/dark_slate_blue</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="CollapsedBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>

    </style>

    <style name="darkBackground" parent="AppTheme.Base">
        <item name="color">@color/dark_violet</item></style>

</resources>
















