<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background"
    android:background="@color/dark_violet"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                card_view:cardCornerRadius="8pt">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btnAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"/>
                    <TextView
                        android:id="@+id/tv_About"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:text="@string/AboutUs"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_AboutSum"
                        android:layout_width="351dp"
                        android:layout_height="36dp"
                        android:layout_below="@+id/tv_About"
                        android:text="@string/AboutSum"
                        android:textColor="@color/black_25_transparent"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnRateUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_below="@+id/tv_AboutSum"/>
                    <TextView
                        android:id="@+id/tv_RateUs"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:text="@string/RateUs"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="20dp"
                        android:layout_below="@+id/tv_AboutSum"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_RateSum"
                        android:layout_width="351dp"
                        android:layout_height="36dp"
                        android:text="@string/RateSum"
                        android:textColor="@color/black_25_transparent"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/tv_RateUs"/>
                    <Button
                        android:id="@+id/btnShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_below="@+id/tv_RateSum"/>
                    <TextView
                        android:id="@+id/tv_Share"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Share"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="20dp"
                        android:layout_below="@+id/tv_RateSum"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_ShareSum"
                        android:layout_width="351dp"
                        android:layout_height="36dp"
                        android:text="@string/ShareSum"
                        android:textColor="@color/black_25_transparent"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/tv_Share"/>


                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ShareSum"
                        android:layout_marginTop="0dp"
                        android:background="@color/transparent" />

                    <TextView
                        android:id="@+id/tv_Logout"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Logout"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="20dp"
                        android:layout_below="@+id/tv_ShareSum"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_LogoutSum"
                        android:layout_width="351dp"
                        android:layout_height="36dp"
                        android:text="@string/LogoutSum"
                        android:textColor="@color/black_25_transparent"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/tv_Logout"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


</RelativeLayout>

