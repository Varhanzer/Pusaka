<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width  = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_margin = "8dp"
    app:cardCornerRadius  = "6dp"
    app:cardElevation     = "6dp"
    xmlns:app             = "http://schemas.android.com/apk/res-auto"
    xmlns:android         = "http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id                      = "@+id/userImageView"
            android:src                     ="@drawable/girl"
            android:layout_width            = "70dp"
            android:layout_height           = "70dp"
            android:layout_alignParentTop   = "true"
            android:layout_alignParentLeft  = "true"
            android:layout_alignParentStart = "true"
            android:layout_marginLeft       = "12dp"
            android:layout_marginStart      = "12dp"
            android:layout_marginTop        = "12dp"
            android:contentDescription      = "@string/app_name"/>

        <TextView
            android:id                 = "@+id/textUsername"
            android:textColor          = "@color/dark_violet"
            android:textSize           = "14sp"
            android:layout_width       = "wrap_content"
            android:layout_height      = "wrap_content"
            android:layout_toEndOf     = "@id/userImageView"
            android:layout_toRightOf   = "@id/userImageView"
            android:layout_alignTop    = "@id/userImageView"
            android:layout_marginLeft  = "12dp"
            android:layout_marginStart = "12dp"
            android:layout_marginEnd   = "12dp"
            android:layout_marginRight = "12dp"/>

        <TextView
            android:id                 = "@+id/textFullName"
            android:textColor          = "@color/dark_violet"
            android:textSize           = "22sp"
            android:textStyle          = "bold"
            android:layout_width       = "wrap_content"
            android:layout_height      = "wrap_content"
            android:layout_below       = "@id/textUsername"
            android:layout_toEndOf     = "@id/userImageView"
            android:layout_toRightOf   = "@id/textUsername"
            android:layout_marginTop   = "2dp"
            android:layout_marginLeft  = "12dp"
            android:layout_marginStart = "12dp"
            android:layout_marginEnd   = "12dp"
            android:layout_marginRight = "12dp"/>

        <TextView
            android:id                 = "@+id/textSchool"
            android:textColor          = "@color/grey"
            android:textSize           = "14sp"
            android:layout_width       = "wrap_content"
            android:layout_height      = "wrap_content"
            android:layout_below       = "@id/textFullName"
            android:layout_toEndOf     = "@id/userImageView"
            android:layout_toRightOf   = "@id/userImageView"
            android:layout_marginTop   = "2dp"
            android:layout_marginLeft  = "12dp"
            android:layout_marginStart = "12dp"
            android:layout_marginEnd   = "12dp"
            android:layout_marginRight = "12dp"/>

        <TextView
            android:id="@+id/txtNextMission"
            android:text="Misi Selanjutnya: 15 Feb 2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userImageView"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>


















